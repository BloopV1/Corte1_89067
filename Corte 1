import math 
from tabulate import tabulate 

Peso= float(input("Cuanto pesas?:"))
Altura= float(input("Cual es su altura:"))
IMC = round(Peso/math.pow(Altura,2),1)
print("Su IMC es de "+str(IMC))

list = [["Forma del cuerpo ","Indice de masa en el cuerpo)"],["Indice del peso menor al comun","Menos de 18.5"],["Indice de peso comun","18.5 – 24.9"],["Indice de Masa corporal superior al comun","25.0 – 29.9"],["La superioridad de peso a lo habitual representa una tasa de obesidad","superior al 30.0"]]
print (tabulate(list))
  
  Tercer Ejercicio:
  
 def Valor_Del_IVA():
    precio = float(input("Ingresa el valor del Producto con IVA:"))
    IVA = precio*0.19
    print("El Valor del  IVA del producto es:",IVA)
    precio_total = precio + IVA 
    print("El Valor del producto con IVA es del:",precio_total)
Valor_Del_IVA()

